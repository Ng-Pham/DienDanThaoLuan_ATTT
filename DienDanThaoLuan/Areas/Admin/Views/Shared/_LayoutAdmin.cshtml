<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IT Xperience Forum</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.0/styles/monokai-sublime.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
    <link href="~/Content/style.css?v=1.2" rel="stylesheet" type="text/css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <style type="text/css">
        body {
            animation: backgroundChange 5s infinite alternate;
        }
    </style>
    <div class="snowflakes" aria-hidden="true">
        <div class="snowflake">❅</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❄</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❄</div>
        <div class="snowflake">❅</div>
        <div class="snowflake">❆</div>
        <div class="snowflake">❄</div>
    </div>
    <!--Header-->
    @Html.Action("_PartialHeader", "DienDanThaoLuan", new { area = "" })
    <!--Menu-->
    @Html.Action("_PartialMenu", "DienDanThaoLuan", new { area = "" })

    @Html.Action("_PartialThongBao", "DienDanThaoLuan", new { area = "" })

    @RenderSection("breadcrumb", required: false)
    <div class="container">
        <!-- Banner Section -->
        @RenderSection("PartialBanner", required: false)
    </div>
    <!-- Main Content Section -->
    <div class="container flex-grow-1">
        @RenderBody()
    </div>
    <!-- Footer Section -->
    <footer class="text-center py-3 text-white">
        @Html.Action("_PartialFooter", "DienDanThaoLuan", new { area = "" })
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
