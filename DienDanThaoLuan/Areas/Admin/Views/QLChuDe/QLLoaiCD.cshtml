
@using DienDanThaoLuan.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<LoaiCD>
@{
    ViewBag.Title = "QLLoaiCD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .custom-create-btn {
        background-color: #0c88c2;
        color: white;
    }

        .custom-create-btn:hover {
            background-color: #194f7f;
            color: white;
        }
    /* Custom color for Edit button */
    .custom-edit-btn {
        background-color: #1a7ee0; /* DodgerBlue */
        color: white;
    }

        .custom-edit-btn:hover {
            background-color: #4682b4; /* SteelBlue */
            color: white;
        }

    .action-cell {
        display: flex;
        justify-content: center; /* Căn giữa */
    }

        .action-cell a {
            margin-left: 10px; /* Thêm khoảng cách trước mỗi nút */
            margin-right: 10px; /* Thêm khoảng cách sau mỗi nút */
        }
</style>
<h2 style="text-align:center" class="p-2">QUẢN LÝ LOẠI CHỦ ĐỀ</h2>

<p>
    @Html.ActionLink("Tạo mới", "TaoLoaiCD", null, new { @class = "btn custom-create-btn" })
</p>


<div style="background-color: white; border-radius: 15px; box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="text-align: center; font-size: 18px; padding-top: 15px;">
                    STT
                </th>
                <th style="font-size: 18px; padding-top: 15px;">
                    Tên loại chủ đề
                </th>
                <th class="action-cell" style="font-size: 18px; padding-top: 15px;">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center;">@(++i)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td class="action-cell">
                        @Html.ActionLink("Sửa", "SuaLoaiCD", new { id = item.MaLoai }, new { @class = "btn custom-edit-btn btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="MenuTrang mb-5">
    @Html.PagedListPager(Model, page => Url.Action("QLLoaiCD", new { page = page }))
</div>
