@model List<DienDanThaoLuan.Models.SoBaiChuDe>


@{
    var groupedByLoai = Model.GroupBy(cd => cd.TenLoai); // Nhóm chủ đề theo loại
}

@foreach (var group in groupedByLoai)
{
    <div class="card mb-4">
        <div class="card-header bg-custom text-white">
            @group.Key <!-- Tên Loại Chủ Đề -->
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var cd in group)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <span>💬 <a href="@Url.Action("BaiVietTheoCD", "DienDanThaoLuan", new {id = cd.MaCD, tenloai = cd.TenLoai})" class="tencd">@cd.TenCD</a></span>
                    <span class="posts"> Số bài: @cd.SoBai</span>
                </li>
            }
        </ul>
    </div>
}