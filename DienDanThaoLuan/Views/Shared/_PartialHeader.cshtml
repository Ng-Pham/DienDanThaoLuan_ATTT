<style type="text/css">
    .santa {
        z-index: 600;
        -webkit-animation: FlyingSanta 38s infinite linear;
        -moz-animation: FlyingSanta 38s infinite linear;
        -ms-animation: FlyingSanta 38s infinite linear;
        -o-animation: FlyingSanta 38s infinite linear;
        animation: FlyingSanta 38s infinite linear;
        top: 5%;
        right: 0%;
        position: absolute;
        max-width: 100px;
        transform: rotate(-30deg);
    }
@@keyframes FlyingSanta {
    25% {
    right: 100%;
    transform:rotate(-30deg) rotateY(0deg);
    }
    26% {
    transform: rotate(30deg) rotateY(180deg);
    }
    50% {
     right: 0%;
     transform:rotate(30deg) rotateY(180deg);
    }
    51% {
     transform: rotate(-30deg) rotateY(0deg);
    }
    75% {
        right: 100%;
        transform: rotate(-30deg) rotateY(0deg);
    }
    76% {
        right: 100%;
        transform: rotate(30deg) rotateY(180deg);
    }
    99% {
     transform: rotate(30deg) rotateY(180deg);
    }
}
</style>

<div id="header" class="christmas-lights">
    <!-- Container for the entire layout -->
    <div class="container">
        <!-- Header Section -->
        <header class="d-flex justify-content-between align-items-center py-3">
            <div class="logo-section d-flex align-items-center">
                <img src="~/Images/logo.jpg" alt="Logo" class="logo me-3">
                <a href="@Url.Action("Index","DienDanThaoLuan")" style="font-size: 2em; text-decoration: none; color: white">IT Xperience</a>
            </div>
            <div class="user-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Dropdown menu for logged-in user -->
                    <div class="dropdown" style="min-width: auto">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Xin chào, @User.Identity.Name!
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","UserInfo")">Thông tin cá nhân</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("BaiVietCuaToi","DienDanThaoLuan")">Bài viết của tôi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Show login and register buttons if user is not authenticated -->
                    <a href="@Url.Action("Login","Account")" class="btn btn-primary me-2">Đăng nhập</a>
                    <a href="@Url.Action("Register","Account")" class="btn btn-outline-primary">Đăng ký</a>
                }
                <img class="santa d-none" src="https://ugokawaii.com/wp-content/uploads/2022/10/reindeer-and-santa.gif" alt="Santa Be Watchin" />
            </div>
        </header>
    </div>
</div>

