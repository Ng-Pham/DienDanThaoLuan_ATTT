
@{
    ViewBag.Title = "GopY";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="feedback-container">
    @using (Html.BeginForm("GopY", "DienDanThaoLuan", FormMethod.Post))
    {
        <h2>Phản Hồi & Góp Ý</h2>
        <div class="form-group">
            @if (!string.IsNullOrEmpty(ViewBag.ThongBao)) // Kiểm tra thông báo thành công
            {
                <div class="response-message success">@ViewBag.ThongBao</div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Loi)) // Kiểm tra thông báo lỗi
            {
                <div class="response-message error">@ViewBag.Loi</div>
            }

            <label for="feedback-content">Nội dung góp ý:</label>
            <textarea id="feedback-content" name="NoiDung" rows="5" placeholder="Nhập góp ý của bạn..."></textarea>
        </div>

        <button type="submit" class="btn-submit">Gửi Góp Ý</button>
    }
</div>

